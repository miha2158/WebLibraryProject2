@using WebLibraryProject2.Controllers
@model IEnumerable<WebLibraryProject2.Models.Stats>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@if (User.Identity.isAdmin())
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Publication.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTaken)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Publication.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTaken)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @if (User.Identity.isAdmin())
            {
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </p>
            }
        </td>
    </tr>
}

</table>
