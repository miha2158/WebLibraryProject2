@model IEnumerable<WebLibraryProject2.Models.BookLocation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Publication.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsTaken)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Publication.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reader.Last ) @Html.DisplayFor(modelItem => item.Reader.First) @Html.DisplayFor(modelItem => item.Reader.Patronimic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsTaken)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                <text>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </text>
            }
        </td>
    </tr>
}

</table>
